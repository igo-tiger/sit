<h1>Listing issues</h1>
<a href="/issues?ref=<%= session[:ref] %>">Your link for save this reference</a>
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Department</th>
    <th>Subject</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @issues.each do |issue| %>
  <tr>
    <td><%= issue.name %></td>
    <td><%= issue.email %></td>
    <td><%= issue.department %></td>
    <td><%= issue.subject %></td>
    <td><%= issue.text %></td>
    <td><%= link_to 'Show', issue %></td>
    <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
    <td><%= link_to 'Destroy', issue, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Issue', new_issue_path %>
